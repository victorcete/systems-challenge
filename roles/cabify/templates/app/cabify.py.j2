#!/usr/bin/env python

import socket
from bottle import route, run

@route('/version')
def version():
  return 'Version: {{ cabify_image_tag }}\n'

@route('/status')
def status():
  return 'OK\n'

@route('/')
def hello():
  return 'Hello from {}!\n'.format(socket.gethostname())

run(host='0.0.0.0', port={{ cabify_image_port }}, debug=False)
